<html lang = "en">
<head>
    <meta charset="UTF-8" />
    <meta name = "viewport" content="width=device-width, initial-scale=1.0" />
    <title> Rotomii - My Profile </title>
    <link rel="stylesheet" href="css/themeSwitch.css" />
    <link rel="stylesheet" href="css/editProfile.css" />
    <link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@300..700&display=swap" rel="stylesheet">
</head>
 <header>
         <!--Nav  -->
        <%- include('partials/navbar') %>
    </header>


<body>
    <div class="edit-profile-container">
        <h1>Edit Your Profile</h1>

        <div class="edit-profile-header">
                <img id = "avatarPreview" src = "<%= user.avatar_image || 'images/default-PFP.jpg' %>" alt="avatar" class="avatar-img" />
            <div>
                <label for="avatarUpload" class="upload-label">Upload New Photo</label>
                <input type = "file" id="avatarUpload" name=""avatar accept="image/*" />
            </div>
        </div>

        <form action = "/profile" method="POST" id="editProfileForm">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id = "username" name = "username" value="<%= user.username %>">
            </div>

            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" id ="address" name="address" value="<%= user.address || "N/A" %>">
            </div>

            <div class="form-group">
                <label for="password">New Password</label>
                <input type="password" id="password" name="password" />
            </div>

             <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" id="confirmPassword" name="confirmPassword" />
                <div class="error-msg" id="passwordError"></div>
            </div>
            <div class="form-buttons">
                <button type ="button" class="btn btn-secondary" onclick="window.location.href='/profile'">Cancel</button>
                <button type="submit" class="btn btn-primary" >Save Changes</button>
            </div>
        </form>
    </div>
    </body>

    <!--  footer  -->
    <%- include('partials/footer') %>
</body>
</html>