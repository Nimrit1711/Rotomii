<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rotomii - Create Team</title>
    <link rel="stylesheet" href="/css/themeSwitch.css">
    <link rel="stylesheet" href="/css/team.css">
    <link rel="stylesheet" href="/css/nav.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/teamCreate.css">
    <link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@300..700&display=swap" rel="stylesheet">

</head>
<body>
    <header>
        <%- include('partials/navbar') %>
    </header>

    <main>
        <div class="create-team-container">
            <h1>Create New Team</h1>

            <form id="createTeamForm">
                <div class="form-group">
                    <label for="teamName">Team Name</label>
                    <input
                        type="text"
                        id="teamName"
                        name="teamName"
                        placeholder="Enter team name"
                        required
                        maxlength="50"
                    >
                    <div class="error-message" id="teamNameError"></div>
                </div>

                <div class="form-group">
                    <label for="notes">Notes (Optional)</label>
                    <textarea
                        id="notes"
                        name="notes"
                        rows="4"
                        placeholder="Add any notes about this team..."
                    ></textarea>
                </div>

                <div class="form-buttons">
                    <button type="button" class="btn btn-secondary" onclick="window.location.href='/teams'">
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-primary">
                        Create Team
                    </button>
                </div>
            </form>
        </div>
    </main>

     <%- include('partials/footer') %>

    <script>
        document.getElementById('createTeamForm').addEventListener('submit', async (e) => {
            e.preventDefault();

            const teamName = document.getElementById('teamName').value.trim();
            const notes = document.getElementById('notes').value.trim();
            const errorElement = document.getElementById('teamNameError');

            // Reset error
            errorElement.style.display = 'none';
            errorElement.textContent = '';

            if (!teamName) {
                errorElement.textContent = 'Team name is required';
                errorElement.style.display = 'block';
                return;
            }

            try {
                const response = await fetch('/api/teams', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        teamName,
                        notes
                    })
                });

                const data = await response.json();

                if (response.ok) {
                    // Redirect to teams page
                    window.location.href = '/teams';
                } else {
                    errorElement.textContent = data.error || 'Failed to create team';
                    errorElement.style.display = 'block';
                }
            } catch (err) {
                console.error('Error creating team:', err);
                errorElement.textContent = 'An error occurred. Please try again.';
                errorElement.style.display = 'block';
            }
        });
    </script>
</body>
</html>
